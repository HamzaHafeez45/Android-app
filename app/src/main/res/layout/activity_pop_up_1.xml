<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="475dp"
    tools:context=".Pop_up_1"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/cross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/circlebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="#C14FD5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="-50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aboutapp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:textColor="#C14FD5"
        android:textSize="20dp"
        android:layout_below="@id/image1"
        android:layout_marginTop="-85dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/adeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adeel"
        android:textColor="#C14FD5"
        android:textSize="20dp"
        android:layout_below="@id/image1"
        android:layout_marginTop="-50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/awais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awais"
        android:textColor="#C14FD5"
        android:textSize="20dp"
        android:layout_below="@id/image1"
        android:layout_marginTop="-50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adeel123@gmai.com"
        android:textColor="#C14FD5"
        android:textSize="10dp"
        android:layout_below="@id/adeel"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="awais233@gmail.com"
        android:textColor="#C14FD5"
        android:textSize="10dp"
        android:layout_below="@id/awais"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_marginTop="-50dp"
        android:layout_below="@id/image1"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:background="#C14FD5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>